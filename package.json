{
  "name": "workout-api-cloudflare-workers",
  "type": "module",
  "version": "1.0.0",
  "description": "An API for tracking workouts and progress over time. Built with Cloudflare Workers and D1.",
  "scripts": {
    "dev": "wrangler dev | pnpm exec pino-pretty",
    "deploy": "wrangler deploy --env production --minify",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply workout-api-cloudflare-workers-d1 --local",
    "db:migrate:remote": "wrangler d1 migrations apply workout-api-cloudflare-workers-d1 --remote",
    "test": "vitest"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@scalar/hono-api-reference": "^0.9.28",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.7",
    "hono-pino": "^0.10.3",
    "pino": "^10.1.0",
    "stoker": "^2.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.5.1",
    "@types/node": "^25.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.1.0",
    "pino-pretty": "^13.1.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  }
}
